model Conversation {
  id        String    @id @default(uuid())
  summary   String?
  messages  Message[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Message {
  id             String   @id @default(uuid())
  conversationId String
  role           String
  content        String
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id])
}

model Order {
  id               String  @id
  status           String
  expectedDelivery String
}

model Payment {
  id        String  @id
  amount    Float
  status    String
  invoiceId String
}
